[default]

# model
model=BPRMF

# dataset
dataset=ml-100k

# device
use_gpu=True
gpu_id=0

# eval setting
# RO_RS/RO_LS, full/uni100/uni1000
eval_setting=RO_RS, full

# eval setting args
split_ratio=[0.8, 0.1, 0.1]
leave_one_num=2
real_time_neg_sampling=True

# training
epochs=10
train_batch_size=2048
learning_rate=0.001
learner=adam
eval_step=1
#valid_metric=AUC
valid_metric=MRR@20
valid_metric_bigger=True
stopping_step=10
checkpoint_dir='saved'
seed=2020

# evaluating
metrics=["Recall", "MRR","NDCG"]
topk=[10, 20]
eval_batch_size=200000
